<table class="table table-striped">
  <thead>
    <tr>
      <td>Name</td>
      <td>Symbol</td>
      <td>Current Price</td>
      <% if @user.id == current_user.id %>
      <td>Actions</td>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @user_stocks.each do |us| %>
    <tr>
      <td><%= us.name %></td>
      <td><%= us.ticker %></td>
      <td><%= us.price %></td>
      <% if @user.id == current_user.id %>
      <td>
        <%= link_to 'Delete', user_stock_path(us), 
                            method: :delete, 
                            :data => { :confirm => "Are you sure?" },
                            :class => 'btn btn-xs btn-danger' %> 
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

</table>
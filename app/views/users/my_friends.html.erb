<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3" class="page-header">
        <h3>My Friends</h3>
      </th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |f| %>
    <tr>
      <td><%= f.full_name %></td>
      <td><%= f.email %></td>
      <td>
        <%= link_to 'View Portfolio', user_path(f), class: 'btn btn-xs btn-primary' %>
        <%= link_to 'Delete', friendship_path(f), 
                            method: :delete, 
                            :data => { :confirm => "Are you sure?" },
                            :class => 'btn btn-xs btn-danger' %> 
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <div class="row">
    <div class="col-xs-12">
      <h3>You have no friendships yet!</h3>
    </div>
  </div>
<% end %>